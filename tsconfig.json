{
  "compileOnSave": true,
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2019"],
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "outDir": "src/build/dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
